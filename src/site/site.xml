    <custom>
        <reflowSkin>
            <absoluteResourceURL>${site-root}/</absoluteResourceURL>
            <protocolRelativeURLs>true</protocolRelativeURLs>

            <endContent>
                ${site.topbar}
            </endContent>

            <!--<theme>bootswatch-spacelab</theme>-->
            <highlightJs>true</highlightJs>
            <highlightJsTheme>default</highlightJsTheme>
            <imgLightbox>true</imgLightbox>
            <smoothScroll>true</smoothScroll>
            <bootstrapCss>true</bootstrapCss>
            <bootstrapIcons>true</bootstrapIcons>
            <html5Anchor>true</html5Anchor>
            <navbarInverse>true</navbarInverse>
            <markPageHeader>true</markPageHeader>
            <skinAttribution>true</skinAttribution>
            <brand>
                <name>
                    <![CDATA[The <span class="color-highlight">KnowledgeStore</span> project]]></name>
                <href>${site-root}index.html</href>
            </brand>
            <slogan>Scalable storage for text and RDF data</slogan>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <toc>none</toc>
            <!--
              <toc>top</toc>
              <tocTopMax>6</tocTopMax>
              <tocTopFlatten>false</tocTopFlatten>
            -->
            <topNav>Project|Documentation|Ontologies|Maven Resources|Modules|Parent Project|Contacts</topNav>
            <bottomNav maxSpan="4">
                <column>Project Links</column>
                <column>Supported by</column>
                <!--<column>Terms of Use</column>-->
            </bottomNav>
            <breadcrumbs>true</breadcrumbs>
            <bottomDescription quote="true">
                <![CDATA[
