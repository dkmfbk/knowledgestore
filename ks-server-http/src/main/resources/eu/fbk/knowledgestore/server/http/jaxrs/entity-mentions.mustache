{{<eu/fbk/knowledgestore/server/http/jaxrs/template}}
{{$content}}

<div class="row subbar">
<form id="request" class="form-inline" role="form" action="ui">
  <input type="hidden" name="action" value="{{action}}"/>
  <div class="form-group col-sm-3">
    <div class="input-group">
      <span class="input-group-addon input-sm">Entity</span>
      <input id="entity" class="form-control input-sm" name="entity" type="text" size="128" placeholder="URI" value="{{entity}}">
    </div>
  </div>
  <div class="form-group col-sm-3">
    <div class="input-group">
      <span class="input-group-addon input-sm">Property</span>
      <input id="property" class="form-control input-sm" name="property" type="text" size="128" placeholder="URI (optional)" value="{{property}}">
    </div>
  </div>
  <div class="form-group col-sm-3">
    <div class="input-group">
      <span class="input-group-addon input-sm">Value</span>
      <input id="value" class="form-control input-sm" name="value" type="text" size="128" placeholder="any value (optional)" value="{{value}}">
    </div>
  </div>
  <div class="form-group col-sm-1">
    <button type="submit" class="btn btn-default btn-sm" style="width: 100%">Display</button>
  </div>
  <div class="col-sm-2" style="text-align:right; font-size: 120%">
    {{message}}
  </div>
</form>
</div>
    
{{{mentionTable}}}

{{/content}}
{{/eu/fbk/knowledgestore/server/http/jaxrs/template}}