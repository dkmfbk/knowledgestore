    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <configuration>
                        <licenseName>apache_v2</licenseName>
                        <!--<licenseResolver>${project.baseUri}/${parent-path}/src/license</licenseResolver>-->
                        <fileTemplate>${project.basedir}${parent-path}/src/license/template.ftl</fileTemplate>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <configuration>
                        <groups>
                            <group>
                                <title>KS core</title>
                                <packages>eu.fbk.knowledgestore:eu.fbk.knowledgestore.data:eu.fbk.knowledgestore.helper:eu.fbk.knowledgestore.vocabulary</packages>
                            </group>
                            <group>
                                <title>KS client</title>
                                <packages>eu.fbk.knowledgestore.client*</packages>
                            </group>
                            <group>
                                <title>KS server</title>
                                <packages>eu.fbk.knowledgestore.server*:eu.fbk.knowledgestore.filestore*:eu.fbk.knowledgestore.datastore*:eu.fbk.knowledgestore.triplestore*:eu.fbk.knowledgestore.runtime*</packages>
                            </group>
                            <group>
                                <title>KS populators</title>
                                <packages>eu.fbk.knowledgestore.populator.naf:eu.fbk.knowledgestore.populator.rdf*</packages>
                            </group>
                        </groups>
                        <excludePackageNames>*.internal:*.populator.naf.model:*.populator.naf.connection:*.server.http.jaxrs</excludePackageNames>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jxr-plugin</artifactId>
                    <configuration>
                        <excludes>
                            <exclude>**/populator/naf/model/*.java</exclude>
                        </excludes>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

